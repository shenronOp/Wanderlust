<% layout("/layouts/boilerplate") %>
    <body>

        
        <h1>All Listings</h1>

        
        
        <div class="row row-cols-lg-3
        row-cols-md-2 row-cols-sm-1">
            <% listings.forEach(listing=> { %>
                <a href="/listings/<%=listing._id%>" class="listing-link mt-3">
                    <div class="card col">
                        <img src="<%=listing.image.url%>" class="card-img-top" alt="Image Not Found" style="height: 20rem;">

                        <div class="card-img-overlay"></div>


                        <div class="card-body">
                            <p class="card-text">
                                <b><%=listing.title%></b>
                                <br>
                                &#8377; <%=listing.price.toLocaleString('en-IN')%>/night
                            </p>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </body>