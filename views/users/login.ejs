<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-8 offset-2">
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" type="text" name="username" placeholder="Give your username" class="form-control" required>
                <div class="valid-feedback">
                    Username Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" type="password" name="password" placeholder="Give your password" class="form-control" required>
                <div class="valid-feedback">
                    Password Looks good!
                </div>
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>